<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title) %>
        <%= yield(:title)  %>
      <% else %> 
        Linda
      <% end %>
    </title>
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
    
  </head>

  <body class='grey lighten-3'>
    <header class='main-header'>
      <nav>
        <div class="logo">
          <%= image_tag asset_path('logo.svg'), size: '100x100' %>
        </div>
         <% if user_signed_in? %>
          <div class='welcome-message'>
            <%= image_tag(current_user.avatar) if current_user.avatar.attached? %>
            <span>Olá<%= ", #{current_user.name}" if current_user.name.present? %>!</span>
          </div>
         <% end %>
        <ul>
          <li><%= link_to "<span class='linda-icon'>&#xe902;</span> Dashboard".html_safe, root_path, class: "#{ 'active' if controller_name.include?'dashboard'}" %></li>
          <li><%= link_to "<span class='linda-icon'>&#xe904;</span> Mensagens".html_safe, messages_path, class: "#{ 'active' if controller_name.include?'messages'}" %></li>
          <li><%= link_to "<span class='linda-icon'>&#xe900;</span> Clientes".html_safe, clients_path, class: "#{ 'active' if controller_name.include?'clients'}" %></li>
          <li><%= link_to "<span class='linda-icon'>&#xe903;</span> Equipe".html_safe, users_path, class: "#{ 'active' if controller_name.include?'users'}" %></li>
          <li><%= link_to "<span class='linda-icon'></span> Conteúdo".html_safe, contents_path, class: "#{ 'active' if controller_name.include?'contents'}" %></li>
          <li><%= link_to "<span class='linda-icon'>&#xe901;</span> CRM".html_safe, crm_index_path, class: "#{ 'active' if controller_name.include?'crm'}" %></li>
          <li><%= link_to "Watson".html_safe, robot_path, class: "#{ 'active' if controller_name.include?'robot'}" %></li>
        </ul>
        <div class="nav-logout">
          <%= link_to 'Sair', destroy_user_session_path, method: :delete,  class: 'btn-dark' %>
        </div>
        <div class='hide-on-med-and-up right menu-mobile'>
          <a href="#" class='menu-mobile-button'>
            <i class="material-icons">menu</i>
          </a>
        </div>
      </nav>
    </header>
  <main class='main-content'>

